class ClientsController < ApplicationController
	
	def index
		@clients = Client.all
	end

	def new
		@client = Client.new
	end

	def create
		@client = Client.new(params[:client])
		@client.save
		flash[:notice] = "Client Successfully Saved."
		render :action => "show"
	end
	
	def show
		@client = Client.find(params[:id])
	end

	def destroy
		@client = Client.find(params[:id])
		@client.destroy
		flash[:alert] = "Client has been Deleted"
		redirect_to @client
	end

end
